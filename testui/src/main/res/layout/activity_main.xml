<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/start_scanning_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:layout_marginBottom="21dp"
        android:text="Start Scanning"
        app:layout_constraintBottom_toTopOf="@+id/stop_scanning_button"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="47dp" />

    <Button
        android:id="@+id/stop_scanning_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="Stop Scanning"
        app:layout_constraintTop_toBottomOf="@+id/start_scanning_button"
        tools:layout_editor_absoluteX="47dp" />

    <TextView
        android:id="@+id/results_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        app:layout_constraintTop_toBottomOf="@+id/stop_scanning_button"
        tools:layout_editor_absoluteX="48dp" />

    <Button
        android:id="@+id/connect_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Connect"
        app:layout_constraintTop_toBottomOf="@+id/results_view"
        tools:layout_editor_absoluteX="47dp" />

    <Button
        android:id="@+id/disconnect_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Disconnect"
        app:layout_constraintTop_toBottomOf="@+id/connect_button"
        tools:layout_editor_absoluteX="47dp" />

</androidx.constraintlayout.widget.ConstraintLayout>